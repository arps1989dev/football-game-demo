<div>  
  <span><h1>Player List</h1></span>
  <span><%= link_to 'Add Player', new_user_path %></span>
</div>
<table class="table table-bordred table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.first_name %></td>
        <td><%= resource.last_name %></td>
        <td><%= link_to 'Detail', resource %></td>
        <td><%= link_to 'Change', edit_user_path(resource) %></td>
        <td><%= link_to 'Delete', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

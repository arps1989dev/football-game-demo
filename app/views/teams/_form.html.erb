<%= form_for(@resource, local: true, html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-group">
  	<%= f.label :name %>
  	<%= f.text_field :name, class: 'form-control'%>
  	<span class="error"><%=  @resource.errors.messages[:name].join(' ')%></span>
  </div>
  <div class="form-group">
  	<%= f.label :user_ids, "Assign User" %> (use shift for multi select)
    <%= f.select :user_ids, User.all.collect {|e| [e.first_name, e.id]},{},{:multiple => true, class: 'form-control'} %>
    <span class="error"><%=  @resource.errors.messages[:user_ids].join(' ')%></span>
  </div>
  <%= f.submit %>
<% end %>
